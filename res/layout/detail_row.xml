<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingBottom="3dip"
    android:paddingLeft="6dip"
    android:paddingTop="3dip" >

    <TextView
        android:id="@+id/toptext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="@string/dummyPhoneNumber"
        android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/bottomtext"
	    style="@style/detailsLabel"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/toptext"
	    android:layout_below="@+id/toptext"
	    android:ellipsize="marquee"
	    android:singleLine="true"
	    android:text="@string/mobile" />

	<LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/bottomtext"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right|center_vertical"
        android:showDividers="beginning" >
		<ImageView
            android:id="@+id/detailsDivider"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:longClickable="false"
            android:src="@drawable/vert_divider"
            android:contentDescription="@string/verticalDivider"/>
        <ImageButton
            android:id="@+id/detailsMoreActions"
            style="@style/flatImageButton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="@string/actions"/>
    </LinearLayout>
</RelativeLayout>