<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.vivekiyer.GAL"
    android:installLocation="auto"
    android:versionCode="14"
    android:versionName="1.3.0" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="16" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:name=".App"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="splitActionBarWhenNarrow" > <!-- android:theme="@style/AppTheme" -->
        <activity
            android:name=".CorporateAddressBook"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".CorporateContactRecord"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".CorporateAddressBook" />
        </activity>
        <activity
            android:name=".Configure"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
        </activity>

        <provider
            android:name=".RecentGALSearchTermsProvider"
            android:authorities="net.vivekiyer.GAL.RecentGALSearchTermsProvider" />
    </application>

</manifest>