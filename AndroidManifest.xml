<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.vivekiyer.GAL"
          android:installLocation="auto"
          android:versionCode="24"
          android:versionName="2.0.8-dev">

	<uses-sdk
			android:minSdkVersion="5"
			android:targetSdkVersion="16"/>

	<supports-screens
			android:anyDensity="true"
			android:largeScreens="true"
			android:normalScreens="true"
			android:resizeable="true"
			android:smallScreens="true"
			android:xlargeScreens="true"/>

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WRITE_CONTACTS"/>
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
	<uses-permission android:name="android.permission.GET_ACCOUNTS"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
	<uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
	<!--<uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>-->
	<!--<uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>-->

	<application
			android:name=".App"
			android:hardwareAccelerated="true"
			android:icon="@drawable/icon"
			android:label="@string/app_name"
			android:theme="@style/AppTheme"
			android:uiOptions="splitActionBarWhenNarrow"
			android:allowBackup="true"> <!-- android:theme="@style/AppTheme" -->
		<activity
				android:name=".CorporateAddressBook"
				android:configChanges="keyboardHidden|orientation"
				android:label="@string/app_name"
				android:launchMode="singleTop">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEARCH"/>
			</intent-filter>

			<meta-data
					android:name="android.app.searchable"
					android:resource="@xml/searchable"/>
		</activity>
		<activity
				android:name=".ContactActivity"
				android:configChanges="keyboardHidden|orientation"
				android:label="@string/app_name">
			<meta-data
					android:name="android.app.default_searchable"
					android:value=".CorporateAddressBook"/>
		</activity>
		<activity
				android:name=".preferences.PrefsActivity"
				android:label="@string/settings"
				android:enabled="true">
			<intent-filter>
				<action android:name="@string/ACTION_PREFS_ACCOUNTS"/>
				<action android:name="@string/ACTION_PREFS_ABOUT"/>

				<category android:name="android.intent.category.PREFERENCE"/>
			</intent-filter>
		</activity>
		<activity
				android:name=".preferences.Configure"
				android:label="@string/addAccount"
				android:enabled="true"
				android:theme="@style/LargeDialog">
			<intent-filter>
				<action android:name="@string/ACTION_PREFS_ACCOUNT_ADD"/>
				<action android:name="@string/ACTION_PREFS_ACCOUNT_EDIT"/>
				<action android:name="@string/ACTION_PREFS_ACCOUNT_DELETE"/>

				<category android:name="android.intent.category.PREFERENCE"/>
			</intent-filter>
		</activity>
		<activity
				android:name=".preferences.AddOrDeleteAccountActivity"
				android:label="@string/addAccount"
				android:enabled="true"
				android:theme="@android:style/Theme.NoDisplay">
			<intent-filter>
				<action android:name="net.vivekiyer.GAL.preferences.ADD_SERVER"/>
				<category android:name="android.intent.category.PREFERENCE"/>
			</intent-filter>
		</activity>

		<provider
				android:name=".RecentGALSearchTermsProvider"
				android:authorities="net.vivekiyer.GAL.RecentGALSearchTermsProvider"/>

		<service
				android:name=".account.AccountAuthenticatorService"
				android:exported="true"
				android:process=":auth">
			<intent-filter>
				<action android:name="android.accounts.AccountAuthenticator"/>
			</intent-filter>
			<meta-data
					android:name="android.accounts.AccountAuthenticator"
					android:resource="@xml/authenticator"/>
		</service>
		<service
				android:name=".account.ContactsSyncAdapterService"
				android:exported="true"
				android:process=":contacts">
			<intent-filter>
				<action android:name="android.content.SyncAdapter"/>
			</intent-filter>

			<meta-data
					android:name="android.content.SyncAdapter"
					android:resource="@xml/sync_contacts"/>
			<meta-data
					android:name="android.provider.CONTACTS_STRUCTURE"
					android:resource="@xml/contacts"/>
		</service>

	</application>

</manifest>